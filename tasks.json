{
    // See http://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "./mach",
    "isShellCommand": true,
    "args": ["--log-no-times"],
    "options": {
      "cwd": "${workspaceRoot}"
    },
    "showOutput": "always",
    "echoCommand": true,
    "tasks": [
        {
            "taskName": "Build",
            "suppressTaskName": true,
            "isBuildCommand": true,
            "args": ["build", "-v"],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                 "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "taskName": "Clobber",
            "suppressTaskName": true,
            "args": ["clobber"]
        }
    ]
}